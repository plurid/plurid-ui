{
    "compilerOptions": {
        "sourceMap": true,

        "baseUrl": ".",
        "paths": {
            "~data/*": [
                "./source/data/*"
            ],
            "~modules/*": [
                "./source/modules/*"
            ],
        },

        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,

        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "target": "es6",
        "lib": [
            "ES2019"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "distribution",

        "rootDir": "source",
        "outDir": "distribution",

        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths",
                "exclude": ["*"]
            }
        ]
    },
    "exclude": [
        "node_modules",
        "distribution",
        "test"
    ]
}
