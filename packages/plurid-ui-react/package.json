    "keywords": [
        "plurid",
        "ui",
        "components"
    ],
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/plurid-ui"
    },
    "bugs": {
        "email": "source@plurid.com",
        "url": "https://github.com/plurid/plurid-ui/issues"
    },
    "homepage": "https://github.com/plurid/plurid-ui",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "distribution/"
    ],
    "main": "distribution/index.js",
    "module": "distribution/index.es.js",
    "jsnext:main": "distribution/index.es.js",
    "engines": {
        "node": ">=8",
        "npm": ">=5"
    },
    "scripts": {
        "storybook": "start-storybook -p 9001 -c storybook",
        "build.storybook": "build-storybook -c storybook",
        "spec": "jest -c ./configurations/jest.config.js",
        "lint": "eslint -c ./configurations/.eslintrc.js ./source/index.ts",
        "clean": "rm -rf ./distribution",
        "start": "yarn clean && rollup -c ./scripts/rollup.config.js -w",
        "build.removeTests": "rm -rf `find ./distribution/ -type d -name __tests__`",
        "build.development": "yarn clean && rollup -c ./scripts/rollup.config.js",
        "build.production": "rollup -c ./scripts/rollup.config.js --environment BUILD:production",
        "build": "yarn clean && yarn lint && yarn spec && yarn build.production && yarn build.removeTests",
        "prepublishOnly": "yarn build"
    },
    "peerDependencies": {
        "@plurid/plurid-functions": ">=0",
        "@plurid/plurid-icons-react": ">=0",
        "@plurid/plurid-themes": ">=0",
        "react": ">=16",
        "react-dom": ">=16",
        "styled-components": ">=4"
    },
    "devDependencies": {
